class Solution {
public:
    int lengthOfLongestSubstring(string s) {
        unordered_map<char,int>mp;
        int l=0 , r=0;
        int n=s.length();
        int maxi=0 ,len=0;
        while(l<n and r<n){
            if(mp.find(s[r])!=mp.end()){
                l=max(mp[s[r]]+1 ,l);
            }
            
            mp[s[r]]=r;
            len=r-l+1;
            r++;
            maxi=max(len,maxi);
        }
        return maxi;
    }
};
